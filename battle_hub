import React, { useState } from "react";
import { BrowserRouter as Router, Routes, Route, Link, Navigate } from "react-router-dom";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Gamepad2, Mail, Phone, User } from "lucide-react";

// Fake authentication (replace with real backend later)
function useAuth() {
  const [user, setUser] = useState(null);
  function login(username) { setUser({ username }); }
  function logout() { setUser(null); }
  return { user, login, logout };
}

function Layout({ children, user, logout }) {
  return (
    <div className="min-h-screen flex flex-col bg-gradient-to-b from-background to-muted/40">
      {/* Navbar */}
      <header className="border-b bg-background/80 backdrop-blur sticky top-0 z-30">
        <div className="max-w-6xl mx-auto flex justify-between items-center px-4 py-3">
          <Link to="/" className="flex items-center gap-2 font-extrabold text-xl">
            <Gamepad2 className="h-6 w-6" /> BATTLE HUB
          </Link>
          <nav className="flex gap-4 text-sm">
            <Link to="/">Home</Link>
            {user && <Link to="/news">News</Link>}
            {user && <Link to="/profile">Profile</Link>}
            <Link to="/about">About</Link>
          </nav>
          <div>
            {user ? (
              <Button size="sm" variant="outline" onClick={logout}>Logout</Button>
            ) : (
              <Link to="/login"><Button size="sm">Login</Button></Link>
            )}
          </div>
        </div>
      </header>
      <main className="flex-1">{children}</main>
      <footer className="border-t bg-background px-4 py-6 text-sm text-center opacity-70">
        <div className="max-w-6xl mx-auto space-y-2">
          <p>© 2025 BATTLE HUB. All rights reserved.</p>
          <div className="flex justify-center gap-4">
            <span className="flex items-center gap-1"><Mail className="h-4 w-4"/> battlehub@email.com</span>
            <span className="flex items-center gap-1"><Phone className="h-4 w-4"/> +91‑98765 43210</span>
          </div>
        </div>
      </footer>
    </div>
  );
}

function Home() {
  return (
    <div className="max-w-6xl mx-auto px-4 py-12 space-y-6">
      <h1 className="text-4xl font-extrabold">Welcome to BATTLE HUB</h1>
      <p className="text-lg opacity-80 max-w-2xl">
        Your one‑stop destination for E‑Sports tournaments, championship updates, and player community. 
        Join us, register your profile, and be part of the action.
      </p>
      <Card>
        <CardHeader>
          <CardTitle>Contact the Organizer</CardTitle>
        </CardHeader>
        <CardContent className="grid gap-4 md:grid-cols-2">
          <div className="space-y-2">
            <label className="text-sm font-medium">Name</label>
            <Input placeholder="Your Name" />
          </div>
          <div className="space-y-2">
            <label className="text-sm font-medium">Email</label>
            <Input type="email" placeholder="name@example.com" />
          </div>
          <div className="md:col-span-2 space-y-2">
            <label className="text-sm font-medium">Message</label>
            <Textarea rows={4} placeholder="Your message..." />
          </div>
          <div className="md:col-span-2">
            <Button className="w-full">Send</Button>
          </div>
        </CardContent>
      </Card>
    </div>
  );
}

function News() {
  return (
    <div className="max-w-6xl mx-auto px-4 py-12 space-y-6">
      <h1 className="text-3xl font-bold">Latest Tournaments & News</h1>
      <ul className="space-y-4">
        <li className="border p-4 rounded-lg">
          <h3 className="font-semibold">Valorant Championship 2025</h3>
          <p className="text-sm opacity-80">Registration opens Sept 1st, 2025.</p>
        </li>
        <li className="border p-4 rounded-lg">
          <h3 className="font-semibold">CS:GO Global Clash</h3>
          <p className="text-sm opacity-80">LAN finals in Mumbai, Oct 2025.</p>
        </li>
      </ul>
    </div>
  );
}

function Profile({ user }) {
  return (
    <div className="max-w-6xl mx-auto px-4 py-12 space-y-6">
      <h1 className="text-3xl font-bold">My Profile</h1>
      <Card>
        <CardHeader>
          <CardTitle>Player Info</CardTitle>
        </CardHeader>
        <CardContent className="space-y-3">
          <div className="flex items-center gap-2"><User className="h-4 w-4"/> Username: {user.username}</div>
          <div>Email: {user.username}@example.com</div>
          <div>Region: India</div>
        </CardContent>
      </Card>
    </div>
  );
}

function About() {
  return (
    <div className="max-w-6xl mx-auto px-4 py-12 space-y-6">
      <h1 className="text-3xl font-bold">About BATTLE HUB</h1>
      <p className="max-w-2xl opacity-80">
        BATTLE HUB is an online platform connecting gamers across the world through competitive e‑sports tournaments.
        We provide championship updates, player profiles, and a thriving gaming community.
      </p>
    </div>
  );
}

function Login({ login }) {
  const [name, setName] = useState("");
  function handleSubmit(e) {
    e.preventDefault();
    login(name);
  }
  return (
    <div className="max-w-sm mx-auto px-4 py-20">
      <Card>
        <CardHeader>
          <CardTitle>Login</CardTitle>
        </CardHeader>
        <CardContent>
          <form onSubmit={handleSubmit} className="space-y-4">
            <Input placeholder="Enter username" value={name} onChange={(e)=>setName(e.target.value)} />
            <Button type="submit" className="w-full">Login</Button>
          </form>
        </CardContent>
      </Card>
    </div>
  );
}

export default function BattleHubApp() {
  const auth = useAuth();
  return (
    <Router>
      <Layout user={auth.user} logout={auth.logout}>
        <Routes>
          <Route path="/" element={<Home />} />
          <Route path="/news" element={auth.user ? <News /> : <Navigate to="/login" />} />
          <Route path="/profile" element={auth.user ? <Profile user={auth.user} /> : <Navigate to="/login" />} />
          <Route path="/about" element={<About />} />
          <Route path="/login" element={<Login login={auth.login} />} />
        </Routes>
      </Layout>
    </Router>
  );
}
